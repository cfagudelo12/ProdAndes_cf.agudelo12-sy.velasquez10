<web-app>
 <description>Servlet Calculadora Web</description>
 <!-- SERVLETS --><servlet>
 	<servlet-name>Recursos</servlet-name>
 	<servlet-class>servlets.ServletRecurso</servlet-class>
</servlet>
	<servlet>
  <servlet-name>Producto</servlet-name>
  <servlet-class>servlets.ServletProducto</servlet-class>
 </servlet>
	<servlet>
		<servlet-name>Proceso</servlet-name>
		<servlet-class>servlets.ServletProcesoProduccion</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Empleados</servlet-name>
		<servlet-class>servlets.ServletEmpleados</servlet-class>
	</servlet>
	<!-- MAPPING --><servlet-mapping>
 	<servlet-name>Recursos</servlet-name>
 	<url-pattern>/recursos.htm</url-pattern>
</servlet-mapping>
 <servlet-mapping>
 	<servlet-name>Producto</servlet-name>
 	<url-pattern>/producto.htm</url-pattern>
</servlet-mapping>
 <servlet-mapping>
 	<servlet-name>Proceso</servlet-name>
 	<url-pattern>/procesoProduccion.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
 	<servlet-name>Empleados</servlet-name>
 	<url-pattern>/empleados.htm</url-pattern>
 </servlet-mapping>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
